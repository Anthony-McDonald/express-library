extends layout

block content

  h1 #{title}: #{genre.name}
  p= genre.name

  if allBooksOfThatGenre.length

    p #[strong Delete the following books before attempting to delete this genre.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in allBooksOfThatGenre
          dt
            a(href=book.title) #{book.author}
          dd #{book.summary}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreid', value=genre._id )

      button.btn.btn-primary(type='submit') Delete
